<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"        "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.robben.bbs.mapper.SquareCommentMapper">    <resultMap id="squareComment"               type="com.robben.bbs.pojo.SquareComment">        <id column="id" property="id"></id>        <result column="squareId" property="squareId" javaType="java.lang.Long"></result>        <result column="content" property="content" javaType="java.lang.String"></result>        <result column="commentingTime" property="commentingTime" javaType="java.sql.Timestamp"></result>        <association property="commenter" column="commenterId"                     select="com.robben.bbs.mapper.OrdinaryUserMapper.getUserById">        </association>        <collection property="commentReply" column="id"                    select="com.robben.bbs.mapper.CommentReplyMapper.getSquareCommentReply">        </collection>    </resultMap>    <select id="getSquareCommentsByWallId" resultMap="squareComment">        select * from squareComment where        squareId=#{squareId} order by commentingTime DESC    </select>    <insert id="saveComment">        insert into squareComment(squareId,commenterId,content) values (#{squareId},#{commenterId},#{content})    </insert>    <delete id="deleteSquareCommentById">        delete from squareComment where id=#{id}    </delete>    <delete id="deleteSquareCommentByWallId">        delete from squarecomment where squareId=#{squareId}    </delete></mapper>