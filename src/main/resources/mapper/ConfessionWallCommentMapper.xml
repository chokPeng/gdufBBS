<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"        "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.robben.bbs.mapper.ConfessionWallCommentMapper">    <resultMap id="confessionWallComment"               type="com.robben.bbs.pojo.ConfessionWallComment">        <id column="id" property="id"></id>        <result column="confessionWallId" property="confessionWallId" javaType="java.lang.Long"></result>        <result column="content" property="content" javaType="java.lang.String"></result>        <result column="commentingTime" property="commentingTime" javaType="java.sql.Timestamp"></result>        <association property="commenter" column="commenterId"                     select="com.robben.bbs.mapper.OrdinaryUserMapper.getUserById">        </association>        <collection property="commentReply" column="id"                    select="com.robben.bbs.mapper.CommentReplyMapper.getConfessionWallCommentReply">        </collection>    </resultMap>    <select id="getConfessionWallCommentsByWallId" resultMap="confessionWallComment">        select * from confessionWallComment where        confessionWallId=#{confessionWallId} order by commentingTime DESC    </select>    <insert id="saveComment">        insert into confessionWallComment(confessionWallId,commenterId,content) values (#{confessionWallId},#{commenterId},#{content})    </insert>    <delete id="deleteConfessionWallCommentById">        delete from confessionWallComment where id=#{id}    </delete>    <delete id="deleteConfessionWallCommentByWallId">        delete from confessionwallcomment where confessionWallId=#{confessionWallId}    </delete></mapper>