<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"        "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.robben.bbs.mapper.PostCommentMapper">    <resultMap id="postComment"               type="com.robben.bbs.pojo.PostComment">        <id column="id" property="id"></id>        <result column="postId" property="postId"></result>        <result column="commentingTime" property="commentingTime"></result>        <result column="content" property="content"></result>        <association property="commenter" column="commenterId"            select="com.robben.bbs.mapper.OrdinaryUserMapper.getUserById">        </association>        <collection property="commentReply" column="id"            select="com.robben.bbs.mapper.CommentReplyMapper.getCommentReplyByCommentId">        </collection>    </resultMap>    <select id="getPostCommentPictureById" resultType="java.lang.String">        select picture from postComment where id=#{id}    </select>    <select id="getPostCommentPictureByPostId" resultType="java.lang.String">        select  picture from postComment where postId=#{postId}    </select>    <select id="getPostCommentByPostId" resultMap="postComment">        select * from postComment where postId=#{postId}    </select>    <insert id="savePostComment">        insert into        postComment(postId,commenterId,content)        values(#{postId},#{commenterId},#{content})    </insert>    <delete id="deletePostCommentById">        delete from postComment where id=#{id}    </delete>    <delete id="deletePostCommentByPostId">        delete from postComment where postId=#{postId}    </delete></mapper>