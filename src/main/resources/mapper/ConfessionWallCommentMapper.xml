<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"        "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.robben.bbs.mapper.ConfessionWallCommentMapper">    <resultMap id="confessionWallComment"               type="com.robben.bbs.pojo.ConfessionWallComment">        <id column="id" property="id"></id>        <result column="confessionWallId"                property="confessionWallId"></result>        <result column="picture" property="picture"></result>        <result column="content" property="content"></result>        <result column="commentingTime" property="commentingTime"></result>        <association property="commenter" column="commenterId"                     select="com.robben.bbs.mapper.OrdinaryUserMapper.getUserById">        </association>    </resultMap>    <select id="getCommentPictureById" resultType="java.lang.String">        select  picture  from confessionWallComment where id=#{commentId}    </select>    <select id="getConfessionWallCommentsByWallId" resultMap="confessionWallComment">        select * from confessionWallComment where        confessionWallId=#{confessionWallId}    </select>    <insert id="saveComment">        insert into        confessionWallComment        <trim prefix="(" suffix=")">            confessionWallId,commenterId,content            <if test="picture!=null">,picture</if>        </trim>        values        <trim prefix="(" suffix=")">            #{confessionWallId},#{commenterId},#{content}            <if test="picture!=null">            ,#{picture}            </if>        </trim>    </insert>    <delete id="deleteConfessionWallCommentById">        delete from confessionWallComment where id=#{id}    </delete>    <delete id="deleteConfessionWallCommentByWallId">        delete from confessionwallcomment where        confessionWallId=#{confessionWallId}    </delete></mapper>