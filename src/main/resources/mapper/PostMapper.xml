<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"        "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.robben.bbs.mapper.PostMapper">    <select id="getAllPosts" resultType="com.robben.bbs.pojo.Post">        select * from post    </select>    <select id="getPostByPostId" resultType="com.robben.bbs.pojo.Post">        select *  from post where postId=#{postId}    </select>    <update id="updatePost">        update post        <trim prefix="(" suffix=")" suffixOverrides=",">            <if test="content!=null">                content,            </if>            <if test="readTimes!=null">                readTimes,            </if>            <if test="topic!=null">                topic,            </if>            <if test="image1!=null">                image1,            </if>            <if test="image2!=null">                image2,            </if>            <if test="image3!=null">                image3,            </if>        </trim>        <trim prefix="values(" suffix=")" suffixOverrides=",">            <if test="content!=null">                #{content},            </if>            <if test="readTimes!=null">                #{readTimes},            </if>            <if test="topic!=null">                #{topic},            </if>            <if test="image1!=null">                #{image1},            </if>            <if test="image2!=null">                #{image2},            </if>            <if test="image3!=null">                #{image3},            </if>        </trim>    </update>    <insert id="savePost">        insert into post        <trim prefix="(" suffix=")" suffixOverrides=",">            content,tittle,topic,posterId,            <if test="image1!=null">image1,</if>            <if test="image2!=null">image2,</if>            <if test="image3!=null">image3,</if>            <if test="image4!=null">image4,</if>            <if test="image5!=null">image5,</if>            <if test="image6!=null">image6,</if>        </trim>        values        <trim prefix="(" suffix=")" suffixOverrides=",">            #{content},#{tittle},#{topic},#{posterId},            <if test="image1!=null">#{image1},</if>            <if test="image2!=null">#{image2},</if>            <if test="image3!=null">#{image3},</if>            <if test="image4!=null">#{image4},</if>            <if test="image5!=null">#{image5},</if>            <if test="image6!=null">#{image6},</if>        </trim>    </insert>    <delete id="deletePost">        delete from post where postId=#{postId}    </delete></mapper>