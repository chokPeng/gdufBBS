<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"        "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.robben.bbs.mapper.CommentReplyMapper">    <resultMap id="commentReply"               type="java.util.HashMap">        <id column="id" property="id"></id>        <result column="content" property="content"></result>        <result column="like" property="like"></result>        <association  column="commenterId" property="commenter" javaType="java.util.HashMap"            select="com.robben.bbs.mapper.OrdinaryUserMapper.getUserById">        </association>        <association  column="replierId" property="replier" javaType="java.util.HashMap"            select="com.robben.bbs.mapper.OrdinaryUserMapper.getUserById">        </association>    </resultMap>    <select id="getPostCommentReply" resultMap="commentReply">        select * from postCommentReply where commentId=#{commentId} order by replyingTime DESC    </select>    <select id="getSquareCommentReply" resultMap="commentReply">        select * from squareCommentReply where commentId=#{commentId} order by replyingTime DESC    </select>    <insert id="savePostCommentReply">        insert into postCommentReply(commentId,content,commenterId,replierId)        values(#{commentId},#{content},#{commenterId},#{replierId})    </insert>    <insert id="saveSquareCommentReply">        insert into squareCommentReply(commentId,content,commenterId,replierId)        values(#{commentId},#{content},#{commenterId},#{replierId})    </insert>    <delete id="deletePostCommentReplyById">        delete from postCommentReply where id=#{id}    </delete>    <delete id="deleteSquareCommentReplyById">        delete from squareCommentReply where id=#{id}    </delete></mapper>