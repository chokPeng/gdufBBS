<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"        "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.robben.bbs.mapper.PostCommentMapper">    <insert id="postComment">        insert into postsComments(postId, commentContent)        VALUES(#{postId},#{commentContent})    </insert>    <delete id="deleteComment">        delete from postsComments where commentsId=#{commentId}    </delete></mapper>