<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"        "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.robben.bbs.mapper.ImageMapper">    <select id="getImageLocationByPostId" resultType="java.lang.String">        select location from  Image where postId=#{postId}    </select>    <select id="getImageLocationByConfessionWallId"            resultType="java.lang.String">        select location from  Image where confessionWallId=#{confessionWallId}    </select><!--    <select id="getImageByPostId" resultType="com.robben.bbs.pojo.Image">--><!--        select * from  Image  where postId=#{postId}--><!--    </select>-->    <insert id="savePostImages" parameterType="java.util.ArrayList">        insert into image(postId,location) values        <foreach collection="list" item="item" index="index"                 separator=",">            (#{item.postId},#{item.location})        </foreach>    </insert>    <insert id="saveConfessionWallImages" parameterType="java.util.ArrayList">        insert into image(postId,location) values        <foreach collection="list" item="item" index="index"                 separator=",">            (#{item.confessionWallId},#{item.location})        </foreach>    </insert>    <delete id="deleteImageByPostId">        delete from image where postId=#{postId}    </delete>    <delete id="deleteImageByConfessionWallId">        delete from image where confessionWallId=#{confessionWallId}    </delete></mapper>