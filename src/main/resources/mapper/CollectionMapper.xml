<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"        "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.robben.bbs.mapper.CollectionMapper">    <resultMap id="collection" type="java.util.HashMap">        <id property="id" column="id"></id>        <result column="collectingTime" property="collectingTime" javaType="java.sql.Timestamp"></result>        <association property="post" column="postId" javaType="java.util.HashMap"                     select="com.robben.bbs.mapper.PostMapper.getPostByPostId">        </association>    </resultMap>    <insert id="saveCollection">        insert into collection(collectorId,postId) values(#{collectorId},#{postId})    </insert>    <delete id="deleteCollection">        delete from collection where collectorId=#{collectorId} and postId=#{postId}    </delete>    <select id="getCollection" resultMap="collection">        select id,collectingTime,postId from collection where collectorId=#{collectorId}    </select>    <select id="getCollectedPostIdList" resultType="java.lang.Long">        select postId from collection where collectorId=#{collectorId}    </select></mapper>