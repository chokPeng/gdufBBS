<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"        "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.robben.bbs.mapper.CommentReplyMapper">    <resultMap id="commentReply"               type="com.robben.bbs.pojo.CommentReply">        <id column="id" property="id"></id>        <result column="content" property="content"></result>        <result column="like" property="like"></result>        <association  column="commenterId" property="commenter"            select="com.robben.bbs.mapper.OrdinaryUserMapper.getUserById">        </association>        <association  column="replierId" property="replier"            select="com.robben.bbs.mapper.OrdinaryUserMapper.getUserById">        </association>    </resultMap>    <select id="getCommentReplyByCommentId" resultMap="commentReply">        select * from commentReply where commentId=#{commentId}    </select>    <insert id="saveCommentReply">        insert into commentReply(content,commenterId,replierId)        values(#{content},#{commenterId},#{replierId})    </insert>    <delete id="deleteCommentReplyById">        delete from commentReply where id=#{id}    </delete></mapper>